<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent"
  android:layout_width="fill_parent">
    
    <FrameLayout
        android:id="@+id/view_call_incall_video_FrameLayout_remote_video"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom|right"
        android:gravity="bottom|right"
        android:layout_height="fill_parent"
        android:background="@color/color_black">
    </FrameLayout>

    <TextView
        android:id="@+id/host_ip"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        
        android:typeface="monospace"
        android:layout_gravity="center|top"
        android:background="#00FFFFFF"
        android:textColor="#00FF00"
        android:textSize="14dp"
        />
    
    <TextView
        android:id="@+id/view_call_incall_video_textView_qos"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/host_ip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:typeface="monospace"
        android:layout_gravity="left|top"
        android:background="#00FFFFFF"
        android:textColor="#0000FF"
        android:textSize="14dp"
        />

    <FrameLayout
		android:layout_height="240dp"
		android:layout_width="180dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:background="@drawable/grad_whiterounded"
		android:layout_margin="4dp"
		android:padding="4dp"
		>
        <FrameLayout
            android:id="@+id/view_call_incall_video_FrameLayout_local_video"
            android:layout_gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            />

    </FrameLayout>

</RelativeLayout>